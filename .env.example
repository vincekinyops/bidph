# Copy to .env and set your values. Used by seeds for super-admin.
# cp .env.example .env

# Create a new super-admin user (seeds will create them with this email + password)
FIRST_SUPER_ADMIN_EMAIL=admin@example.com
FIRST_SUPER_ADMIN_PASSWORD=your-secure-password-min-12-chars

# Or to only promote an existing user, set just the email (no password)
# FIRST_SUPER_ADMIN_EMAIL=existing@example.com

# --- Email (Swoosh SMTP) ---
MAIL_FROM=no-reply@bidph.local
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=always

# --- Payments / Webhooks ---
PAYMENTS_WEBHOOK_SECRET=change-me
GCASH_API_KEY=change-me
MAYA_API_KEY=change-me
BANK_API_KEY=change-me

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
